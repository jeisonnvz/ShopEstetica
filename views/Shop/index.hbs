{{# each products}}
<div class="row"> 
   {{# each this }}
<div class="col-sm-4 col-md-3">
    <div class="card" id="card1" style="width: 18rem;">
    <img class="card-img-top" src="{{this.imagePath}}" alt="Card image cap">
    <div class="card-body">
     <h5 class="card-title">{{this.title}}</h5>
     <div class="price"> ${{this.price}}</div>
        <p class="card-text">{{this.description}}</p>
     <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right">Agregar al carrito</a>
    </div>
    </div>
    </div>
   {{/each}}
    
      
</div>
{{/each}}
